{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-api",
      "type": "shell",
      "command": "python",
      "args": [
        "api/main.py"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "start-frontend",
      "type": "shell",
      "command": "cd",
      "args": [
        "frontend",
        "&&",
        "npm",
        "start"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}